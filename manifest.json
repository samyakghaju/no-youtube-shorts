{
  "manifest_version": 3,
  "name": "No YouTube Shorts",
  "version": "2.2",
  "description": "Removes YouTube Shorts from YouTube",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
